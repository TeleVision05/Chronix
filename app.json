{
  "expo": {
    "name": "Chronix",
    "slug": "Chronix",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Chronix needs access to your camera to capture photos for your daily entries.",
        "NSLocationWhenInUseUsageDescription": "Chronix uses your location to create timeline entries for your daily activities.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Chronix uses your location in the background to track your daily activities and create timeline entries even when the app is not active.",
        "NSPhotoLibraryUsageDescription": "Chronix needs access to your photo library to save and select photos for your daily entries.",
        "NSMicrophoneUsageDescription": "Chronix needs access to your microphone for video recording.",
        "UIBackgroundModes": [
          "location",
          "background-processing"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ],
      "package": "com.therune.Chronix"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-location",
      "expo-camera",
      "expo-image-picker",
      "expo-media-library",
      "expo-notifications",
      "expo-file-system"
    ],
    "extra": {
      "eas": {
        "projectId": "11a23026-be56-4d85-bf1a-db0227c7c928"
      }
    }
  }
}
